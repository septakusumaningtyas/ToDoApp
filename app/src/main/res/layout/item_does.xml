<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bgitemdoes">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titledoes"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="#000c5d"
            android:text="Buy Wishkas"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descdoes"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="#adadad"
            android:text="Nearly market good to"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datedoes"
            android:textSize="16sp"
            android:textColor="#f63ea5"
            android:text="Tomorrow"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
</LinearLayout>