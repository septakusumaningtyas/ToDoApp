<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/titlepage"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:text="Create New Does"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mmedium"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#23a24d"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgitemdoes"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-50dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addtitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Add Title"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mlight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="text"
                android:hint="What You Do?"
                android:textColorHint="#b5b5b5"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/titleDoes"
                android:background="@drawable/bginputtask"
                android:paddingLeft="12dp"
                android:fontFamily="@font/mmedium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adddesc"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Description"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mlight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="text"
                android:hint="How to?"
                android:textColorHint="#b5b5b5"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/descDoes"
                android:background="@drawable/bginputtask"
                android:paddingLeft="12dp"
                android:fontFamily="@font/mmedium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adddate"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Timeline"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/mlight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="text"
                android:hint="When will?"
                android:textColorHint="#b5b5b5"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dateDoes"
                android:background="@drawable/bginputtask"
                android:paddingLeft="12dp"
                android:fontFamily="@font/mmedium"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/btnSaveTask"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Create Now"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@drawable/bgbtncreate"
        android:fontFamily="@font/mmedium"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/btnCancel"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Cancel"
        android:textColor="#fafafa"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@drawable/bgbtncancel"
        android:fontFamily="@font/mlight"
        />
</LinearLayout>